<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<Spinner
		android:id="@+id/sp_row_subject_subject"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginRight="8dp"
		app:layout_constraintBottom_toTopOf="@id/sp_row_subject_level"
		app:layout_constraintEnd_toStartOf="@id/iv_row_subject_remove"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Spinner
		android:id="@+id/sp_row_subject_level"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginRight="8dp"
		app:layout_constraintBottom_toTopOf="@id/et_row_subject_additional_price"
		app:layout_constraintEnd_toStartOf="@id/iv_row_subject_remove"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/sp_row_subject_subject" />

	<EditText
		android:id="@+id/et_row_subject_additional_price"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginBottom="8dp"
		android:digits="0123456789"
		android:gravity="center"
		android:hint="Dodatkowa stawka"
		android:inputType="number"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/iv_row_subject_remove"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/sp_row_subject_level" />

	<ImageView
		android:id="@+id/iv_row_subject_remove"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_marginLeft="8dp"
		android:padding="8dp"
		android:src="@drawable/ic_remove"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>